{
  "name": "starter/energine-app",
  "type": "project",
  "require": {
    "php": "^8.3",
    "ext-opcache": "*",

    "psr/log": "^3.0",
    "psr/cache": "^3.0",
    "psr/container": "^2.0",

    "php-di/php-di": "^7.0",
    "monolog/monolog": "^3.7",
    "symfony/cache": "^7.1",
    "symfony/http-foundation": "^7.1",
    "doctrine/dbal": "^4.0",
    "symfony/validator": "^7.1",
    "symfony/translation": "^7.1",

    "google/apiclient": "*",
    "ezyang/htmlpurifier": "^4.18",
    "symfony/mailer": "^7.3",
    "symfony/mime": "^7.3",
    "symfony/http-client": "^7.3",

    "twbs/bootstrap": "^5.3.3"
  },

  "autoload": {
    "psr-4": {
      "App\\": "app/src/"
    },
    "classmap": [
      "core/modules",
      "site/modules"
    ],
    "files": [
      "app/helpers.php"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "apcu-autoloader": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require-dev": {
    "filp/whoops": "^2.18",
    "phpstan/phpstan": "^2.1"
  }
}
