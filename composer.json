{
  "name": "starter/energine-app",
  "type": "project",
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "components/jstree",
        "version": "3.3.16",
        "type": "component",
        "dist": {
          "type": "tar",
          "url": "https://registry.npmjs.org/jstree/-/jstree-3.3.16.tgz"
        },
        "extra": {
          "component": {
            "name": "jstree",
            "files": [
              "dist/jstree.js",
              "dist/jstree.min.js",
              "dist/jstree.min.js.map",
              "dist/themes/default/style.css",
              "dist/themes/default/style.min.css",
              "dist/themes/default-dark/style.css",
              "dist/themes/default-dark/style.min.css",
              "dist/themes/default/32px.png",
              "dist/themes/default/40px.png",
              "dist/themes/default/throbber.gif",
              "dist/themes/default-dark/32px.png",
              "dist/themes/default-dark/40px.png",
              "dist/themes/default-dark/throbber.gif"
            ]
          }
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "codemirror/codemirror",
        "version": "5.65.16",
        "type": "library",
        "dist": {
          "type": "tar",
          "url": "https://registry.npmjs.org/codemirror/-/codemirror-5.65.16.tgz"
        }
      }
    }
  ],

  "require": {
    "php": "^8.4",
    "ext-zend-opcache": "*",

    "psr/log": "^3.0",
    "psr/cache": "^3.0",
    "psr/container": "^2.0",

    "php-di/php-di": "^7.0",
    "monolog/monolog": "^3.7",
    "symfony/cache": "^7.1",
    "symfony/dependency-injection": "^7.1",
    "symfony/http-foundation": "^7.1",
    "doctrine/dbal": "^4.0",
    "symfony/validator": "^7.1",
    "symfony/translation": "^7.1",
    "symfony/runtime": "^7.1",
    "symfony/routing": "^7.1",

    "google/apiclient": "*",
    "ezyang/htmlpurifier": "^4.18",
    "symfony/mailer": "^7.3",
    "symfony/mime": "^7.3",
    "symfony/http-client": "^7.3",

    "twbs/bootstrap": "^5.3",
    "fortawesome/font-awesome": "^7.1",
    "components/jquery": "^3.7",
    "components/jstree": "^3.3",
    "codemirror/codemirror": "^5.65",
    "ckeditor/ckeditor": "4.22.1",
    "symfony/security-core": "^7.1",
    "symfony/security-http": "^7.1",
    "league/flysystem": "^3.24",
    "league/flysystem-ftp": "^3.24",
    "league/flysystem-aws-s3-v3": "^3.24",
    "webfontkit/roboto": "^1.0"
  },

  "autoload": {
    "psr-4": {
      "App\\": "app/src/"
    },
    "classmap": [
      "engine/core/modules",
      "site/modules"
    ],
    "files": [
      "app/helpers.php"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "apcu-autoloader": true,
    "process-timeout": 3600,
    "allow-plugins": {
      "symfony/runtime": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require-dev": {
    "filp/whoops": "^2.18",
    "phpstan/phpstan": "^2.1",
    "friendsofphp/php-cs-fixer": "^3.64",
    "slevomat/coding-standard": "^8.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "shipmonk/dead-code-detector": "^0.13"
  },
  "scripts": {
    "cs:fix": "php-cs-fixer fix",
    "cs:lint": "php-cs-fixer fix --dry-run --diff",
    "phpstan": "phpstan analyse --configuration=phpstan.neon.dist --memory-limit=8G",
    "phpstan:dead-code": "phpstan analyse --configuration=phpstan.neon.dist --level=max --memory-limit=8G"
  }
}
