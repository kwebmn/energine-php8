<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <state name="main">
        <javascript>
            <behavior name="FeedToolbar"/>
        </javascript>
        <toolbar>
            <control id="add" title="BTN_ADD_ARTICLE" icon="fa fa-plus" type="button" onclick="add"/>
            <control id="edit" title="BTN_EDIT_ARTICLE" icon="fa fa-pencil" type="button" onclick="edit"/>
            <control id="delete" title="BTN_DELETE_ARTICLE" icon="fa fa-trash" type="button" onclick="del"/>
        </toolbar>
        <fields>
            <field name="Testfeed_id"/>
			<field name="lang_id"/>
			<field name="smap_id"/>
			<field name="test_img"/>
			<field name="test_date"/>
			<field name="test_datetime"/>
			<field name="test_rtf"/>
			<field name="test_text"/>
			<field name="test_name"/>

        </fields>
    </state>
    <state name="add">
        <uri_patterns>
            <pattern>/add/</pattern>
        </uri_patterns>
        <javascript>
            <library path="ckeditor/ckeditor" loader="classic"/>
            <behavior name="Form"/>
        </javascript>
        <toolbar>
            <control id="save" title="BTN_SAVE" icon="fa fa-save" type="button" onclick="save"/>
            <control id="after_save_action" title="TXT_AFTER_SAVE_ACTION" type="select">
                <options>
                    <option id="reload">BTN_CLOSE</option>
                    <option id="add">BTN_ADD</option>
                </options>
            </control>
            <control id="sep1" type="separator"/>
            <control id="list" title="BTN_CANCEL" icon="fa fa-arrow-left" type="button" onclick="close"/>
        </toolbar>
        <fields>
            <field name="Testfeed_id"/>
			<field name="lang_id"/>
			<field name="smap_id"/>
			<field name="test_img"/>
			<field name="test_date"/>
			<field name="test_datetime"/>
			<field name="test_rtf"/>
			<field name="test_text"/>
			<field name="test_name"/>

        </fields>
    </state>
    <state name="edit">
        <uri_patterns>
            <pattern>/[int]/edit/</pattern>
        </uri_patterns>
        <javascript>
            <library path="ckeditor/ckeditor" loader="classic"/>
            <behavior name="Form"/>
        </javascript>
        <toolbar>
            <control id="save" title="BTN_SAVE" icon="fa fa-save" type="button" onclick="save"/>
            <control id="list" title="BTN_CLOSE" icon="fa fa-arrow-left" type="button" onclick="close"/>
        </toolbar>
        <fields>
            <field name="Testfeed_id"/>
			<field name="lang_id"/>
			<field name="smap_id"/>
			<field name="test_img"/>
			<field name="test_date"/>
			<field name="test_datetime"/>
			<field name="test_rtf"/>
			<field name="test_text"/>
			<field name="test_name"/>

        </fields>
    </state>
    <state name="save" rights="3">
        <uri_patterns>
            <pattern>/save/</pattern>
        </uri_patterns>
    </state>
    <state name="autoCompleteTags">
        <uri_patterns>
            <pattern>/tag-autocomplete/</pattern>
        </uri_patterns>
    </state>
    <state name="delete" rights="3">
        <uri_patterns>
            <pattern>/[int]/delete/</pattern>
        </uri_patterns>
    </state>
    <state name="getRawData" rights="3">
        <uri_patterns>
            <pattern>/get-data/</pattern>
            <pattern>/get-data/page-[pageNumber]/</pattern>
            <pattern>/get-data/[sortField]-[sortDir]/</pattern>
            <pattern>/get-data/[sortField]-[sortDir]/page-[pageNumber]/</pattern>
        </uri_patterns>
    </state>

    <state name="showSmapSelector" rights="3">
        <uri_patterns>
            <pattern>/selector/[any]/</pattern>
        </uri_patterns>
    </state>
</configuration>
