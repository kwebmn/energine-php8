<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <state name="main">
        <javascript>
            <behavior name="GridManager"/>
        </javascript>
        <toolbar>
            <!--<control id="view" title="BTN_VIEW" icon="fa fa-eye" type="button" onclick="view"/>-->
            <control id="add" title="BTN_ADD" icon="fa fa-plus" type="button" onclick="add"/>
            <control id="edit" title="BTN_EDIT" icon="fa fa-pencil" type="button" onclick="edit"/>
            <control id="delete" title="BTN_DELETE" icon="fa fa-trash" type="button" onclick="del"/>

            <control icon="fa fa-arrow-up" type="button" id="up" title="BTN_MOVE_UP" onclick="up" />
            <control icon="fa fa-arrow-down" type="button" id="down" title="BTN_MOVE_DOWN" onclick="down" />

        </toolbar>
        <fields>
            <field name="Testfeed_id"/>
			<field name="lang_id"/>
			<field name="test_img"/>
			<field name="test_date"/>
			<field name="test_datetime"/>
			<field name="test_rtf"/>
			<field name="test_text"/>
			<field name="test_name"/>

        </fields>
    </state>

    <state name="add">
        <uri_patterns>
            <pattern>/add/</pattern>
        </uri_patterns>
        <javascript>
            <library path="suneditor/loader" loader="classic"/>
            <behavior name="Form"/>
        </javascript>
        <toolbar>
            <control id="save" title="BTN_SAVE" icon="fa fa-save" type="button" onclick="save"/>
            <control id="after_save_action" title="TXT_AFTER_SAVE_ACTION" type="select">
                <options>
                    <option id="reload">BTN_CLOSE</option>
                    <option id="add">BTN_ADD</option>
                </options>
            </control>
            <control id="sep1" type="separator"/>
            <control id="close" title="BTN_CANCEL" icon="fa fa-times" type="button"
                     onclick="close"/>
        </toolbar>
        <fields>
            <field name="Testfeed_id"/>
			<field name="lang_id"/>
			<field name="test_img"/>
			<field name="test_date"/>
			<field name="test_datetime"/>
			<field name="test_rtf"/>
			<field name="test_text"/>
			<field name="test_name"/>

        </fields>
    </state>

    <state name="edit">
        <uri_patterns>
            <pattern>/[int]/edit/</pattern>
        </uri_patterns>
        <javascript>
            <library path="suneditor/loader" loader="classic"/>
            <behavior name="Form"/>
        </javascript>
        <toolbar>
            <control id="save" title="BTN_SAVE" icon="fa fa-save" type="button" onclick="save"/>
            <control id="after_save_action" title="TXT_AFTER_SAVE_ACTION" type="select">
                <options>
                    <option id="reload">BTN_CLOSE</option>
                    <option id="editNext">BTN_EDIT_NEXT</option>
                    <option id="editPrev">BTN_EDIT_PREV</option>
                </options>
            </control>
            <control id="sep1" type="separator"/>
            <control id="list" title="BTN_CLOSE" icon="fa fa-arrow-left" type="button" onclick="close"/>
        </toolbar>
        <fields>
            <field name="Testfeed_id"/>
			<field name="lang_id"/>
			<field name="test_img"/>
			<field name="test_date"/>
			<field name="test_datetime"/>
			<field name="test_rtf"/>
			<field name="test_text"/>
			<field name="test_name"/>

        </fields>
    </state>

    <state name="save" rights="2">
        <uri_patterns>
            <pattern>/save/</pattern>
        </uri_patterns>
    </state>

    <state name="delete" rights="2">
        <uri_patterns>
            <pattern>/[int]/delete/</pattern>
        </uri_patterns>
    </state>

    <state name="getRawData" rights="2">
        <uri_patterns>
            <pattern>/get-data/</pattern>
            <pattern>/get-data/page-[pageNumber]/</pattern>
            <pattern>/get-data/[sortField]-[sortDir]/</pattern>
            <pattern>/get-data/[sortField]-[sortDir]/page-[pageNumber]/</pattern>
        </uri_patterns>
    </state>

    <state name="view">
        <uri_patterns>
            <pattern>/[int]/</pattern>
        </uri_patterns>
        <javascript>
            <library path="suneditor/loader" loader="classic"/>
            <behavior name="Form"/>
        </javascript>
        <toolbar>
            <control id="list" title="BTN_CLOSE" icon="fa fa-arrow-left" type="button" onclick="close"/>
        </toolbar>
    </state>

    <state name="up" rights="2">
        <uri_patterns>
            <pattern>/[int]/up/</pattern>
        </uri_patterns>
    </state>
    <state name="down" rights="2">
        <uri_patterns>
            <pattern>/[int]/down/</pattern>
        </uri_patterns>
    </state>
</configuration>
