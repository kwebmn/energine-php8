<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <state name="showTransEditor" rights="3">
        <uri_patterns>
            <pattern>/translation/[any]/</pattern>
        </uri_patterns>
    </state>
    <state name="showWidgetEditor" rights="3">
        <uri_patterns>
            <pattern>/widgets/[any]/</pattern>
        </uri_patterns>
    </state>
    <state name="showUserEditor" rights="3">
        <uri_patterns>
            <pattern>/user/[any]/</pattern>
        </uri_patterns>
    </state>
    <state name="showRoleEditor" rights="3">
        <uri_patterns>
            <pattern>/role/[any]/</pattern>
        </uri_patterns>
    </state>
    <state name="showLangEditor" rights="3">
        <uri_patterns>
            <pattern>/languages/[any]/</pattern>
        </uri_patterns>
    </state>
    <state name="showSiteEditor" rights="3">
        <uri_patterns>
            <pattern>/sites/[any]/</pattern>
        </uri_patterns>
    </state>
    <state name="main" rights="3">
        <uri_patterns> 
            <pattern>/show/</pattern>
            <pattern>/show/[site_id]/</pattern>
        </uri_patterns>
        <javascript>
            <library path="jquery.min" loader="classic"/>
            <library path="jstree/jstree" loader="classic"/>
            <behavior name="DivSidebar"/>
        </javascript>
        <fields>
            <field name="smap_id"/>
            <field name="smap_pid"/>
            <field name="lang_id"/>
            <field name="smap_name"/>
        </fields>
        <toolbar name="division-editor-toolbar">
            <control id="add" title="BTN_ADD" type="button" icon="fa-solid fa-plus" onclick="add"/>
            <control id="edit" title="BTN_EDIT" type="button" icon="fa-solid fa-pen-to-square" onclick="edit"/>
            <control id="delete" title="BTN_DELETE" type="button" icon="fa-solid fa-trash-can" onclick="del"/>
            <!-- <control id="go" title="BTN_GO" icon="fa-solid fa-arrow-up-right-from-square" type="button" onclick="go"/>-->
            <control id="sep1" type="separator"/>
            <control id="up" title="BTN_MOVE_UP" type="button" icon="fa-solid fa-arrow-up" onclick="up" icon-only="true"/>
            <control id="down" title="BTN_MOVE_DOWN" type="button" icon="fa-solid fa-arrow-down" onclick="down" icon-only="true"/>
            <!-- <control id="sep2" type="separator"/>
                   <control id="close" title="BTN_CLOSE" icon="fa-solid fa-xmark" type="button" onclick="close" icon-only="true"/>-->
        </toolbar>
        <translations>
            <translation const="BTN_ADD"/>
            <translation const="BTN_EDIT"/>
            <translation const="BTN_DELETE"/>
            <translation const="BTN_REFRESH"/>
            <translation const="BTN_UP"/>
            <translation const="BTN_DOWN"/>
        </translations>
    </state>
    <state name="selector" rights="3">
        <uri_patterns>
            <pattern>/[site_id]/list/</pattern>
            <pattern>/[site_id]/list/[int]/</pattern>
        </uri_patterns>
        <javascript>
            <library path="jquery.min" loader="classic"/>
            <library path="jstree/jstree" loader="classic"/>
            <behavior name="DivTree"/>
        </javascript>
        <fields>
            <field name="smap_id"/>
            <field name="smap_pid"/>
            <field name="lang_id"/>
            <field name="smap_name"/>
        </fields>
        <toolbar>
            <control id="select" title="BTN_SELECT" icon="fa fa-check-square-o" type="button" onclick="select"/>
            <control id="close" title="BTN_CLOSE" icon="fa fa-times" type="button" onclick="close"/>
        </toolbar>
    </state>
    <state name="getRawData" rights="3">
        <uri_patterns>
            <pattern>/[site_id]/get-data/</pattern>
            <pattern>/[site_id]/get-data/[string]/</pattern>
        </uri_patterns>
    </state>
    <state name="resetTemplates" rights="3">
        <uri_patterns>
            <pattern>/[site_id]/reset-templates/</pattern>
            <pattern>/reset-templates/[smap_id]/</pattern>
            <pattern>/reset-templates/</pattern>
        </uri_patterns>
    </state>
    <state name="getProperties" rights="3">
        <uri_patterns>
            <pattern>/get-node-data/</pattern>
        </uri_patterns>
    </state>
    <state name="getTemplateInfo" rights="3">
        <uri_patterns>
            <pattern>/get-template-info/</pattern>
        </uri_patterns>
    </state>
    <state name="add" rights="3">
        <uri_patterns>
            <pattern>/add/[pid]/</pattern>
        </uri_patterns>
        <fields>
            <field name="smap_id"/>
            <field name="smap_pid"/>
            <field name="lang_id"/>
            <field name="site_id" type="hidden"/>
            <field name="smap_content"/>
            <field name="smap_layout"/>
            <field name="smap_segment" pattern="/^[a-z0-9\-\.]+$/" message="TXT_BAD_SEGMENT_FORMAT"/>
            <field name="smap_redirect_url"/>
            <field name="smap_is_disabled"/>
            <field name="page_rights" type="custom" tabName="TAB_PAGE_RIGHTS"/>
            <field name="smap_name"/>
<!--            <field name="smap_title"/>-->
            <field name="smap_description_rtf"/>
            <field name="smap_html_title"/>
            <field name="smap_meta_keywords"/>
            <field name="smap_meta_description"/>
<!--            <field name="smap_icon"/>-->
        </fields>
        <javascript>
            <library path="suneditor/loader" loader="classic"/>
            <behavior name="DivForm"/>
        </javascript>
        <toolbar>
            <control id="save" title="BTN_SAVE" icon="fa fa-save" type="button" onclick="save"/>
            <control id="after_save_action" title="TXT_AFTER_SAVE_ACTION" type="select">
                <options>
                    <option id="reload">BTN_CLOSE</option>
                    <option id="add">BTN_ADD</option>
                    <option id="go">BTN_GO</option>
                </options>
            </control>
            <control id="sep1" type="separator"/>
            <control id="list" title="BTN_CANCEL" icon="fa fa-arrow-left" type="button" onclick="close"/>
        </toolbar>
    </state>
    <state name="edit" rights="3">
        <uri_patterns>
            <pattern>/[int]/edit/</pattern>
        </uri_patterns>
        <fields>
            <field name="smap_id"/>
            <field name="smap_pid"/>
            <field name="lang_id"/>
            <field name="site_id" type="hidden"/>
            <field name="smap_content"/>
            <field name="smap_layout"/>
            <field name="smap_segment" pattern="/^[a-z0-9\-\.]+$/" message="TXT_BAD_SEGMENT_FORMAT"/>
            <field name="smap_redirect_url"/>
            <field name="smap_meta_robots"/>
            <field name="smap_is_disabled"/>
            <field name="page_rights" type="custom" tabName="TAB_PAGE_RIGHTS"/>
            <field name="smap_name"/>
<!--            <field name="smap_title"/>-->
            <field name="smap_description_rtf"/>
            <field name="smap_html_title"/>
            <field name="smap_meta_keywords"/>
            <field name="smap_meta_description"/>
<!--            <field name="smap_icon"/>-->
        </fields>
        <javascript>
            <library path="suneditor/loader" loader="classic"/>
            <behavior name="DivForm"/>
        </javascript>
        <toolbar>
            <control id="save" title="BTN_SAVE" icon="fa fa-save" type="button" onclick="save"/>
            <control id="list" title="BTN_CLOSE" icon="fa fa-arrow-left" type="button" onclick="close"/>
        </toolbar>
    </state>
    <state name="save" rights="3">
        <uri_patterns>
            <pattern>/save/</pattern>
        </uri_patterns>
    </state>
    <state name="delete" rights="3">
        <uri_patterns>
            <pattern>/[int]/delete/</pattern>
        </uri_patterns>
    </state>
    <state name="up" rights="3">
        <uri_patterns>
            <pattern>/[int]/up/</pattern>
        </uri_patterns>
    </state>
    <state name="down" rights="3">
        <uri_patterns>
            <pattern>/[int]/down/</pattern>
        </uri_patterns>
    </state>
    <state name="showPageToolbar" rights="3">
        <uri_patterns>
            <pattern>/show-toolbar/</pattern>
        </uri_patterns>
        <toolbar name="main_toolbar">
            <!--<control id="showSidebar" title="BTN_SIDEBAR" type="button" icon="images/toolbar/structure.gif"-->
                     <!--onclick="toggleSidebar"/>-->
            <!--<control id="sep1" type="separator"/>-->
            <control id="editMode" title="BTN_EDIT_MODE" icon="fa fa-pencil-square-o" type="switcher" onclick="editMode"/>
            <!--<control id="sep2" type="separator"/>
            <control id="editBlocks" title="BTN_EDIT_BLOCKS" type="switcher" onclick="editBlocks"/>-->
            <!--disabled="disabled"-->
            <!-- <control id="sep3" type="separator"/> -->
            <control id="transEditor" title="BTN_TRANS_EDITOR" icon="fa fa-language" type="button" onclick="showTransEditor"/>
            <!-- <control id="sep13" type="separator"/> -->
            <control id="language" title="BTN_LANG_EDITOR" icon="fa fa-globe" type="button" onclick="showLangEditor"/>
            <!-- <control id="sep4" type="separator"/> -->
            <control id="user" title="BTN_USER_EDITOR" icon="fa fa-user" type="button" onclick="showUserEditor"/>
            <!-- <control id="sep14" type="separator"/> -->
            <control id="role" title="BTN_ROLE_EDITOR" icon="fa fa-users" type="button" onclick="showRoleEditor"/>
            <!-- <control id="sep5" type="separator"/> -->
            <control id="fileRepository" title="BTN_FILE_REPOSITORY" icon="fa fa-folder-open" type="button" onclick="showFileRepository"/>
            <!-- <control id="sep6" type="separator"/> -->
            <control id="siteEditor" title="BTN_SITE_EDITOR" icon="fa fa-sitemap" type="button" onclick="showSiteEditor"/>
        </toolbar>
        <javascript>
            <behavior name="PageToolbar"/>
            <param name="dock">top</param>
        </javascript>
    </state>
</configuration>
