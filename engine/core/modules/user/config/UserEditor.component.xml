<?xml version="1.0" encoding="utf-8" ?>
<configuration>
		<state name="main">
			<javascript>
				<behavior name="UserManager"/>
			</javascript>
            <filter>
                <field name="u_name"/>
                <field name="u_fullname"/>
            </filter>
			<fields>
				<field name="u_id"/>
                <field name="u_is_active"/>
				<field name="u_fullname"/>
				<field name="u_name"/>
				<field name="u_group" type="text" title="FIELD_U_GROUP" sort="0"/>
			</fields>
			<toolbar>
				<control id="auth" title="BTN_AUTH" icon="fa fa-sign-in" type="button" onclick="auth"/>
				<control id="add" title="BTN_ADD" icon="fa fa-plus" type="button" onclick="add"/>
				<control id="edit" title="BTN_EDIT" icon="fa fa-pencil" type="button" onclick="edit"/>
				<control id="delete" title="BTN_DELETE" icon="fa fa-trash" type="button" onclick="del"/>
				<control id="sep1" type="separator"></control>
				<control id="activate" title="BTN_ACTIVATE" icon="fa fa-check" type="button" onclick="activate"/>
				<control id="sep2" type="separator"></control>
                <control id="close" title="BTN_CLOSE" icon="fa fa-times" type="button" onclick="close"/>
			</toolbar>
		</state>
		<state name="add" >
			<uri_patterns>
				<pattern>/add/</pattern>
			</uri_patterns>
			<javascript>
				<library path="ckeditor/ckeditor" loader="classic"/>
				<behavior name="Form"/>
			</javascript>
			<toolbar>
				<control id="save" title="BTN_SAVE" icon="fa fa-save" type="button" onclick="save"/>
				<control id="list" title="BTN_CLOSE" icon="fa fa-arrow-left" type="button" onclick="close"/>
			</toolbar>
		</state>
		<state name="edit" >
			<uri_patterns>
				<pattern>/[int]/edit/</pattern>
			</uri_patterns>
			<javascript>
				<library path="ckeditor/ckeditor" loader="classic"/>
				<behavior name="Form"/>
			</javascript>
			<toolbar>
				<control id="save" title="BTN_SAVE" icon="fa fa-save" type="button" onclick="save"/>
				<control id="list" title="BTN_CLOSE" icon="fa fa-arrow-left" type="button" onclick="close"/>
			</toolbar>
		</state>
		<state name="save">
			<uri_patterns>
				<pattern>/save/</pattern>
			</uri_patterns>
		</state>
		<state name="getRawData">
			<uri_patterns>
				<pattern>/get-data/</pattern>
				<pattern>/get-data/page-[pageNumber]/</pattern>
                <pattern>/get-data/[sortField]-[sortDir]/</pattern>
                <pattern>/get-data/[sortField]-[sortDir]/page-[pageNumber]/</pattern>
			</uri_patterns>
		</state>
		<state name="delete">
			<uri_patterns>
				<pattern>/[int]/delete/</pattern>
			</uri_patterns>
		</state>
        <state name="upload"  rights="3">
             <uri_patterns>
                 <pattern>/upload/</pattern>
             </uri_patterns>
        </state>
        <state name="imageManager" rights="3">
            <uri_patterns>
                <pattern>/imagemanager/</pattern>
            </uri_patterns>
        </state>
        <state name="fileLibrary" rights="3">
            <uri_patterns>
                <pattern>/file-library/</pattern>
                <pattern>/file-library/[any]/</pattern>
            </uri_patterns>
        </state>

		<state name="auth" rights="3">
			<uri_patterns>
				<pattern>/[int]/auth/</pattern>
			</uri_patterns>
		</state>

        <state name="activate" rights="3">
            <uri_patterns>
                <pattern>/[int]/activate/</pattern>
            </uri_patterns>
        </state>



</configuration>
