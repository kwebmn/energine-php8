<?xml version="1.0" encoding="utf-8" ?>
<configuration>

    <state name="main">
        <uri_patterns>
            <pattern>/</pattern>
        </uri_patterns>
        <javascript>
            <behavior  name="RecoverPassword"/>
        </javascript>
        <translations>
            <translation const="TXT_EMAIL"/>
            <translation const="TXT_RECOVER_PASSWORD"/>
        </translations>
        <!--<fields>-->
            <!--<field name="order_id"/>-->
            <!--<field name="order_name"/>-->
            <!--<field name="order_phone"/>-->
            <!--<field name="order_address"/>-->
            <!--<field name="order_email"/>-->
            <!--<field name="order_price"/>-->
        <!--</fields>-->
    </state>

    <state name="change">
        <uri_patterns>
            <pattern>/change/</pattern>
        </uri_patterns>
    </state>

    <state name="check">
        <uri_patterns>
            <pattern>/check/</pattern>
        </uri_patterns>
    </state>

    <state name="recover">
        <uri_patterns>
            <pattern>/recover/[string]/</pattern>
        </uri_patterns>
        <javascript>
            <behavior  name="RecoverPassword" path="default"/>
        </javascript>
        <translations>
            <translation const="FIELD_CHANGE_U_PASSWORD"/>
            <translation const="FIELD_CHANGE_U_PASSWORD2"/>
            <translation const="TXT_PROFILE_CHANGE_PASSWORD"/>
        </translations>
    </state>



</configuration>