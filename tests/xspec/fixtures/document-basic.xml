<?xml version="1.0" encoding="UTF-8"?>
<document debug="1">
    <properties>
        <property name="base" folder="/" static="/static/" media="/media/" resizer="/resizer/" default="/">/</property>
        <property name="lang" abbr="en/" real_abbr="en" />
        <property name="title">Demo</property>
        <property name="title_alt"/>
        <property name="single">0</property>
        <property name="keywords">demo</property>
        <property name="description">Demo page</property>
        <property name="robots">index, follow</property>
        <property name="ID">1</property>
    </properties>
    <translations json="{}"/>
    <content>
        <container name="hero" html_class="hero-block" widget="widget">
            <component name="adminPanel" module="share" />
            <component name="textBlock" module="content" sample="TextBlock" title="Welcome">
                <recordset>
                    <record>
                        <field name="Text">Hello!</field>
                    </record>
                </recordset>
            </component>
        </container>
        <component type="list" name="news" module="share" action="/list" componentAction="save">
            <recordset>
                <record>
                    <field name="Title">News item</field>
                </record>
            </recordset>
        </component>
        <component type="form" name="feedback" module="share" action="/form" componentAction="save">
            <toolbar position="top">
                <control type="submit" id="save" title="Save" />
            </toolbar>
            <recordset>
                <record>
                    <field name="Title" type="text" nullable="0">Sample</field>
                    <field name="Body" type="textarea" nullable="1">Text</field>
                </record>
            </recordset>
        </component>
    </content>
</document>
